{{>layout/header}}
<div class="container">
    <h1>Register Post</h1>

    <div class="col-md-12">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="title"> <b>Title</b></label>
                    <input type="text" class="form-control" id="title" placeholder="Enter title">
                </div>
                <div class="form-group">
                    <label for="author"> <b>Author</b> </label>
                    <input type="text" class="form-control" id="author" value="{{author}}" readonly="readonly">
                </div>
                <div class="form-group">
                    <label for="content"> <b>Description</b> </label>
                    <textarea class="form-control" id="content" placeholder="Enter description"></textarea>
                </div>
            </form>
            <a href="/" role="button" class="btn btn-secondary">Cancel</a>
            <button type="button" class="btn btn-primary" id="btn-save">Register</button>
        </div>
    </div>
</div>

{{>layout/footer}}